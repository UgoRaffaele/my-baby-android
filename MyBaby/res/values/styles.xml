<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:colorPrimary">#AA66CC</item>
	    <item name="android:colorPrimaryDark">#9933CC</item>
	    <item name="android:textColorPrimary">#FFFFFF</item>
	    <item name="android:navigationBarColor">#9933CC</item>
	    <item name="android:colorAccent">#AA66CC</item>
	    <item name="android:colorControlHighlight">#9933CC</item>
	    <item name="android:textColor">#FF9933CC</item>
	    <item name="android:editTextStyle">@style/AppThemeEditTextStyle</item>
	    <item name="android:spinnerStyle">@style/AppThemeSpinnerStyle</item>
    </style>
    
    <!-- EditText theme. -->
    <style name="AppThemeEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:minHeight">56dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#FF9933CC</item>
        <item name="android:background">@drawable/material_border</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Spinner theme. -->
    <style name="AppThemeSpinnerStyle" parent="@android:style/Widget.Material.Spinner">
        <item name="android:minHeight">56dp</item>
        <item name="android:background">@drawable/material_border</item>
    </style>
    
    
</resources>